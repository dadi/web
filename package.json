{
  "name": "@dadi/web",
  "version": "2.0.1",
  "description": "Web frontend and template layer for @dadi/api",
  "main": "main.js",
  "scripts": {
    "start": "node ./main.js",
    "test": "snazzy && env NODE_ENV=test ./node_modules/.bin/istanbul cover -x '**/workspace/**' -x '**/app/**' --report cobertura --report text --report html --report lcov ./node_modules/mocha/bin/_mocha test",
    "posttest": "node ./scripts/coverage.js",
    "postinstall": "node ./scripts/copy-config.js && node ./scripts/copy-workspace.js && node ./scripts/init-web.js",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg",
    "format": "prettier --write 'dadi/**/*.js' && standard --fix 'dadi/**/*.js'" 
  },
  "lint-staged": {
    "*.js": [
      "prettier --no-semi --write",
      "standard --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@dadi/cache": "1.5.x",
    "@dadi/format-error": "^1.1.0",
    "@dadi/logger": "latest",
    "@dadi/metadata": "^1.0.0",
    "@dadi/passport": "latest",
    "@dadi/status": "latest",
    "@purest/providers": "^1.0.0",
    "async": "^2.3.0",
    "body-parser": "^1.11.0",
    "chokidar": "^1.5.2",
    "colors": "latest",
    "common-dustjs-helpers": "^1.4.1",
    "compression": "^1.6.0",
    "connect-modrewrite": "^0.10.1",
    "connect-mongo": "latest",
    "connect-redis": "3.2.0",
    "console-stamp": "^0.2.2",
    "convict": "3.0.0",
    "debug": "^2.6.1",
    "dustjs-helpers": "^1.7.3",
    "dustjs-linkedin": "^2.7.2",
    "event-stream": "^3.3.1",
    "express-session": "1.15.3",
    "feedparser": "^2.2.0",
    "fs-extra": "^2.1.2",
    "js-beautify": "^1.5.10",
    "js-yaml": "^3.7.0",
    "kinesis": "^1.2.2",
    "marked": "^0.3.6",
    "mkdirp": "^0.5.1",
    "moment": "^2.10.6",
    "mongodb": "2.2.x",
    "path-to-regexp": "^1.2.1",
    "perfy": "^1.1.0",
    "proxy-addr": "^1.1.2",
    "purest": "^3.0.1",
    "qs": "6.4.0",
    "raven": "^1.2.1",
    "recursive-readdir": "^2.1.1",
    "redis": "^2.2.5",
    "request": "^2.74.0",
    "send": "^0.15.1",
    "serve-favicon": "^2.3.0",
    "serve-static": "^1.10.0",
    "server-destroy": "1.0.1",
    "toobusy-js": "^0.5.1",
    "underscore": "~1.8.3",
    "underscore.string": "^3.2.2",
    "wildcard": "^1.1.2",
    "snyk": "^1.30.1"
  },
  "devDependencies": {
    "env-test": "^1.0.0",
    "husky": "^0.13.3",
    "istanbul": "^1.1.0-alpha.1",
    "istanbul-cobertura-badger": "^1.1.0",
    "lint-staged": "^3.4.0",
    "mocha": "latest",
    "nock": "^9.0.13",
    "prettier": "^1.1.0",
    "should": "latest",
    "sinon": "1.x.x",
    "snazzy": "^6.0.0",
    "standard": "8.6.0",
    "superagent": "^3.5.2",
    "superagent-mock": "^3.3.0",
    "supertest": "latest",
    "uuid": "^3.0.1",
    "validate-commit-msg": "^2.12.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dadi/web.git"
  },
  "bugs": {
    "url": "https://github.com/dadi/web/issues"
  },
  "homepage": "https://github.com/dadi/web",
  "directories": {
    "test": "test"
  },
  "standard": {
    "ignore": [
      "scripts",
      "test",
      "workspace"
    ]
  },
  "author": "DADI <team@dadi.tech>",
  "license": "SEE LICENSE IN GPL.md",
  "snyk": true
}
