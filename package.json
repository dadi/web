    "@dadi/passport": "latest",
    "@dadi/status": "latest",
    "@dadi/web-dustjs": "latest",
    "@purest/providers": "^1.0.0",
    "async": "^2.3.0",
    "body-parser": "^1.11.0",
    "chokidar": "^1.5.2",
    "colors": "latest",
    "compressible": "^2.0.10",
    "connect-modrewrite": "^0.10.1",
    "connect-mongo": "latest",
    "connect-redis": "3.3.0",
    "console-stamp": "^0.2.2",
    "convict": "3.0.0",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "debug": "^3.1.0",
    "deepmerge": "^1.3.2",
    "dustjs-helpers": "^1.7.3",
    "dustjs-linkedin": "^2.7.5",
    "etag": "^1.8.0",
    "event-stream": "^3.3.1",
    "express-session": "1.15.3",
    "feedparser": "^2.2.0",
    "fs-extra": "^3.0.1",
    "humanize-plus": "^1.8.2",
